<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Payments</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/payments/add">Add Payment</a></li>
            </ul>
        </nav>
        <h1>All Payments</h1>
    </header>

    <main class="container">
        <h2>List of All Payments</h2>
        <% if (paymentsall && paymentsall.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Payment ID</th>
                        <th>Booking ID</th>
                        <th>Amount</th>
                        <th>Payment Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% paymentsall.forEach(payment => { %>
                        <tr>
                            <td><%= payment.payment_id %></td>
                            <td><%= payment.booking_id %></td>
                            <td><%= payment.amount %></td>
                            <td><%= payment.payment_status %></td>
                            <td class="actions">
                                <a href="/payments/<%= payment.payment_id %>">Details</a>
                                <a href="/payments/<%= payment.payment_id %>/edit">Edit</a>
                                <form action="/payments/<%= payment.payment_id %>/delete" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this payment?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No payments found.</p>
        <% } %>
    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> My Awesome App</p>
    </footer>
</body>
</html>