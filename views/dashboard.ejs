<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .dashboard-cards {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }
    .card {
      padding: 15px;
      background-color: #f0f0f0;
      border-radius: 5px;
      box-shadow: 1px 1px 5px #ccc;
    }
    .nav-links {
      list-style-type: none;
      padding: 0;
      margin-bottom: 20px;
    }
    .nav-links li {
      display: inline-block;
      margin-right: 15px;
    }
    .nav-links a {
      text-decoration: none;
      color: #007BFF;
    }
    .admin-info {
      margin-top: 30px;
    }
  </style>
</head>
<body>
  <h1>Hotel Management Dashboard</h1>

  <div class="dashboard-cards">
    <div class="card">Total Hotels: <%= totalHotels %></div>
    <div class="card">Total Rooms: <%= totalRooms %></div>
    <div class="card">Total Bookings: <%= totalBookings %></div>
    <div class="card">Total Users: <%= totalUsers %></div>
    <div class="card">Total Payments: <%= totalPayments %></div>
  </div>


  <ul class="nav-links">
  <li><a href="/hotels">Manage Hotels</a></li>
  <li><a href="/rooms">Manage Rooms</a></li>
  <li><a href="/users">Manage Users</a></li>
  <li><a href="/bookings">Manage Bookings</a></li>
  <li><a href="/payments">Manage Payments</a></li>
</ul>


  <h3>Recent Bookings</h3>
  <% if (recentBookings && recentBookings.length > 0) { %>
    <ul>
      <% recentBookings.forEach(booking => { %>
        <li>Booking ID: <%= booking.booking_id %> - User: <%= booking.user_id %> - Room: <%= booking.room_id %></li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No recent bookings found.</p>
  <% } %>

  <div class="admin-info">
    <p>Welcome, <%= adminName || 'Admin' %>!</p>
    <a href="/logout">Logout</a>
  </div>
</body>
</html>
